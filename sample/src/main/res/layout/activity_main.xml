<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff191f26"
    tools:context="com.gastudio.gabottleloading.gabottleloading.MainActivity">


    <com.gastudio.gabottleloading.library.GABottleLoadingView
        android:id="@+id/bottle_view_small"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottle_view_big"
        app:layout_constraintEnd_toStartOf="@+id/bottle_view_middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <com.gastudio.gabottleloading.library.GABottleLoadingView
        android:id="@+id/bottle_view_middle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottle_view_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bottle_view_small"
        app:layout_constraintTop_toTopOf="parent" />

    <com.gastudio.gabottleloading.library.GABottleLoadingView
        android:id="@+id/bottle_view_big"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bottle_view_small"
        app:layout_constraintTop_toBottomOf="@+id/bottle_view_middle" />
</android.support.constraint.ConstraintLayout>
